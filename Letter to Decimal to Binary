    #include <iostream>  
    using namespace std;  
    int main()  
    {  
    int n;
    char x;
    cout<<"Enter the number to convert: ";
    cin>>x;
    
    if (x=='a'){n=1;}
    if (x=='b'){n=10;}
    if (x=='c'){n=11;}
    if (x=='d'){n=100;}
    if (x=='e'){n=101;}
    if (x=='f'){n=110;}
    if (x=='g'){n=111;}
    if (x=='h'){n=1000;}
    if (x=='i'){n=1001;}
    if (x=='j'){n=1010;}
    if (x=='k'){n=1011;}
    if (x=='l'){n=1100;}
    if (x=='m'){n=1101;}
    if (x=='n'){n=1110;}
    if (x=='o'){n=1111;}
    if (x=='p'){n=10000;}
    if (x=='q'){n=10001;}
    if (x=='r'){n=10010;}
    if (x=='s'){n=10011;}
    if (x=='t'){n=10100;}
    if (x=='u'){n=10101;}
    if (x=='v'){n=10110;}
    if (x=='w'){n=10111;}
    if (x=='x'){n=11000;}
    if (x=='y'){n=11001;}
    if (x=='z'){n=11010;}
     cout << n;
    }
